{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install --legacy-peer-deps && pip3 install --user yt-dlp && npm run build"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300
  },
  "variables": {
    "PYTHONPATH": "$PYTHONPATH:/app/.local/lib/python3.11/site-packages",
    "PATH": "$PATH:/app/.local/bin"
  }
} 